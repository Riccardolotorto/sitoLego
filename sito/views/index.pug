doctype html
html
  head
    title #{title}
    link(rel='stylesheet', href='/css/style.css')
    meta(name="viewport", content="width=device-width, initial-scale=1")
  body
    header.header
      h1 #{title}
    article.container
      each product in lego
        div.product
          img(src=`/images/${product.img}`, alt=`${product.name}`, width="500", height="500")
          h2 #{product.name}
          a(href=`/istruzioni?id=${product.id}`) View Instructions
